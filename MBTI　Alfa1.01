              ${[5,4,3,2,1].map(v => {
                const id = `q${i}_${v}`;
                const lbl = data.options[5-v];
                return `
                  <input type="radio" id="${id}" name="q${i}" value="${v}" ${answers[i]==v?"checked":""} style="display:none;">
